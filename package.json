{
  "name": "fuse-react-ssr",
  "version": "1.0.0",
  "description": "Get started with node Express using FuseBox module loader and bundler Edit",
  "main": "index.js",
  "scripts": {
    "start": "concurrent --kill-others \"npm run start-prod\" \"npm run start-prod-api\"",
    "start-prod": "better-npm-run start-prod",
    "start-prod-api": "better-npm-run start-prod-api",
    "build": "better-npm-run build",
    "start-dev": "better-npm-run start-dev",
    "start-dev-api": "better-npm-run start-dev-api",
    "dev": "concurrently --kill-others \"npm run watch-client\" \"npm run start-dev\" \"npm run start-dev-api\"",
    "watch-client": "better-npm-run watch-client",
    "clean": "rimraf .fusebox dist/bundle.js dist/sourcemaps.js.map"
  },
  "betterScripts": {
    "build": {
      "command": "node ./fuse.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "start-prod-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api",
        "NODE_ENV": "production",
        "APIPORT": 3030
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000,
        "APIPORT": 3030
      }
    },
    "start-dev-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api",
        "NODE_ENV": "development",
        "APIPORT": 3030
      }
    },
    "watch-client": {
      "command": "node fuse.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src",
        "PORT": 3000,
        "APIPORT": 3030
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gerhardsletten/fuse-box-react-ssr.git"
  },
  "author": "gerharsletten",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gerhardsletten/fuse-box-react-ssr/issues"
  },
  "homepage": "https://github.com/gerhardsletten/fuse-box-react-ssr#readme",
  "devDependencies": {
    "babel-core": "^6.20.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "better-npm-run": "0.0.14",
    "concurrently": "^3.3.0",
    "fuse-box": "^1.3.112",
    "node-sass": "^4.5.0",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "body-parser": "^1.16.1",
    "compression": "^1.6.2",
    "express": "^4.14.1",
    "http-proxy": "^1.16.2",
    "piping": "^1.0.0-rc.4",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-connect": "^5.0.0",
    "redux-logger": "^2.8.1",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.3.0",
    "superagent": "^3.4.1"
  }
}
